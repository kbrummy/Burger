<div class="container">
    <h1>Eat Yo Burger!</h1>

    <h2 class="text-center">Burgers waiting to be devoured!</h2>
    <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2>Burgers we devoured!</h2>

    <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block sleep=false}}
        {{/if}}
        {{/each}}
    </ul>

    <h2>Add a Burger!</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">What kind of burger?</label>
            <input type="text" id="ca" name="burger_name">
        </div>

        <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Waiting to eat this burger!
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>